<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize5dp" parent="">
        <item name="cornerSize">5dp</item>
    </style>
    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <!-- Add other attributes such as font family or text all caps -->
        <item name="tabIndicator">@drawable/tab_rounded_background</item>
        <item name="tabIndicatorHeight">10dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <!-- Ensure no line is added to the bottom -->
        <item name="android:background">@android:color/transparent</item>
        <!-- Remove any other attributes that may add a border -->
    </style>
</resources>