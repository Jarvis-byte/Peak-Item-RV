<!-- res/drawable/tab_rounded_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:width="1dp" android:color="@color/white" /> <!-- White border -->
            <padding android:left="10dp" android:top="2dp" android:right="10dp" android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</selector>
